<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Görev Listesi</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>

<body>
    <div class="container text-center">
        <div class="row align-items-start">
            <div class="col-2"></div>
            <div class="col-7">

                <form class="row g-3">
                    <div class="col-auto">
                        <input type="text" readonly class="form-control-plaintext" value="Görev Ekle">
                    </div>
                    <div class="col-auto">
                        <input type="text" class="form-control" id="inputadd" placeholder="görev ekle">
                    </div>
                    <div class="col-auto">
                        <button id="btnAdd" type="submit" class="btn btn-primary mb-3">Ekle</button>
                    </div>
                </form>

                <div class="card mt-3">
                    <ul id="task-list" class="list-group list-group-flush"></ul>
                </div>
            </div>
            <div class="col-3"></div>
        </div>
    </div>

    <script>
        "use strict";

        let gorevler = [
            { id: 1, gorevAdi: "Görev 1" },
            { id: 2, gorevAdi: "Görev 2" },
            { id: 3, gorevAdi: "Görev 3" },
            { id: 4, gorevAdi: "Görev 4" }
        ];

        Gorevlistesi();

        function Gorevlistesi() {
            let ul = document.getElementById("task-list");
            ul.innerHTML = "";

            for (let gorev of gorevler) {
                let li = `
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="${gorev.id}">
                        <label class="form-check-label" for="${gorev.id}">
                            ${gorev.gorevAdi}
                        </label>
                    </div>
                    <i class="bi bi-trash text-danger" style="cursor:pointer"
                       onclick="gorevSil(${gorev.id})"></i>
                </li>`;
                ul.insertAdjacentHTML("beforeend", li);
            }
        }

        document.querySelector("#btnAdd").addEventListener("click", newGorev);

        function newGorev(event) {
            event.preventDefault();
            let taskInput = document.querySelector("#inputadd");

            if (taskInput.value.trim() === "") {
                alert("Görev alanı boş bırakılamaz!");
                return;
            }

            gorevler.push({
                id: gorevler.length + 1,
                gorevAdi: taskInput.value
            });

            Gorevlistesi();
            taskInput.value = "";
        }

        function gorevSil(id) {
            gorevler = gorevler.filter(g => g.id !== id);
            Gorevlistesi();
        }

        
        document.addEventListener("keydown", function (event) {
            if (event.key === "f" || event.key === "F") {
                document.getElementById("btnAdd").click();
            }
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
